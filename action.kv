<BackgroundColor@Widget>
	background_color: 1,1,1,1
	canvas.before:
		Color:
			rgba:root.background_color
		Rectangle:
			size: self.size
			pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
	background_color: 0, 0, 0, 0




<RootWidget>:
	padding: 15
	orientation:'vertical'

	canvas:
		Color:
			rgb: .6, .6, .6
		Rectangle:
			pos: self.pos
			size: self.size

	BoxLayout:
		
		#Label:
		#	text:'Welcome'
		#	hight: '100dp'
		
		Image:
			source: 'logo.png'
			size: self.texture_size
			allow_stretch: True


	BoxLayout:

		spacing: 15
		padding: 60

		BoxLayout:		
			orientation:'vertical'
			spacing: 15
			

			BackgroundLabel
				text:'Username'
				size_hint_y: None
				height: '30dp'
				background_color: 1, 0, 0, 1
				

				
			BackgroundLabel
				text:'Password'
				height: '30dp'
				size_hint_y: None
				background_color: 1, 0, 0, 1
				
				
				
			Button:
				text:'Submit'
				font_size: '12dp' 
				size_hint_y: None
				size_hint_x: .5
				height: '20dp'
				background_color: .1, .5, .6, 1
				

			Label:
				text:''
								
		BoxLayout:
			orientation: 'vertical'
			spacing: 15
						
			TextInput:
				height: '30dp'
				size_hint_y: None
				multiline: False

			TextInput:
				height: '30dp'
				size_hint_y: None
				multiline: False
				password: True
				
			Button:
				text:'Cancel'
				font_size: '12dp' 
				size_hint_y: None
				size_hint_x: .5
				height: '20dp'
				background_color: .1, .5, .6, 1
									
			Label:
				text:''	
	BoxLayout:

		Label:
			text:''